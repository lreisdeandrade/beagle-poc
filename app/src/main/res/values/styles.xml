<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorDark</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="DefaultTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultTextAppearance.CustomText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultButton">
        <item name="background">@color/colorBlue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultButton.CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorDark</item>
        <item name="background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultToolbar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundColor">@color/colorDark</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="DefaultToolbar.CustomToolbar">
        <item name="android:textColor">@color/colorDark</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/CustomTitleToolbar</item>
        <item name="centerTitle">false</item>
    </style>

    <style name="CustomTitleToolbar">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
